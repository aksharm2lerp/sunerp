@model Business.Entities.Party.PartyAddressTxn
<form method="post" id="formAddUpdatePartyAddress" class="row g-3 needs-validation" asp-area="Marketing" asp-controller="Party" asp-action="AddUpdatePartyAddress">
    <div class="row mt-3">
        <input type="hidden" asp-for="PartyID" />
        <input type="hidden" asp-for="PartyAddressTxnID" />
        <div class="col-md-12">
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Address Type<span class="required">*</span></label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="AddressTypeID" id="AddressTypeID" name="AddressTypeID" asp-items="@SuperCompanyDropdownBinder.AddressType()" required>
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="AddressTypeID" class="text-danger"></span>
                </div>
            </div>
            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Plot  No./Name <span class="required">*</span></label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="PlotNoName" name="PlotNoName" asp-for="PlotNoName" required>
                    <span asp-validation-for="PlotNoName" class="text-danger"></span>
                </div>
            </div>
            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Street No./Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="StreetNoName" placeholder="" maxlength="200">
                </div>
            </div>
            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Landmark</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Landmark" placeholder="" maxlength="200">                    
                </div>
            </div>
            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Area</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Area" placeholder="" maxlength="150">
                </div>
            </div>
            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Pincode</label>
                <div class="col-sm-8 autoerp">
                    <input type="text" class="form-control" asp-for="ZIPCode" placeholder="" maxlength="150">
                </div>
            </div>
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">City</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control bs-autocomplete" asp-for="City" placeholder="" maxlength="15" autocomplete="off">
                </div>
            </div>
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Taluka <span class="required">*</span></label>
                <div class="col-sm-8">
                    <input type="text" class="form-control bs-autocomplete" asp-for="Taluka" placeholder="" maxlength="15" autocomplete="off" required>
                    <span asp-validation-for="Taluka" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">District <span class="required">*</span></label>
                <div class="col-sm-8">
                    <input type="text" class="form-control bs-autocomplete" asp-for="District" name="District" id="District" required>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">State<span class="required">*</span></label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="StateID" asp-items="@SuperCompanyDropdownBinder.State(Model.CountryID)" id="countryDropDownList" required>
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="StateID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Country<span class="required">*</span></label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="CountryID" asp-items="@SuperCompanyDropdownBinder.Countries()" id="countryDropdown" onloadeddata="loadCountries()" required>
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="CountryID" class="text-danger"></span>
                </div>
            </div>

            <div class="row  mb-3">
                <label for="" class="col-sm-4 col-form-label text-end">Is Active</label>
                <div class="col-sm-8">
                    <input type="checkbox" class="form-check-input" asp-for="IsActive">
                </div>
            </div>

            <div class="modal-footer-sticky text-center">
                <button id="btnPartyAddressSave" type="submit" onsubmit="fnBtnSavePartyAddress()" class="btn btn-primary btn-info px-5 ladda-button">Submit</button>
                <button type="button" class="btn btn-primary btn-info px-5 ladda-button" data-bs-dismiss="offcanvas" aria-l abel="Close">Cancel</button>
            </div>
        </div>

    </div>
</form>
<link href="~/admin/assets/vendors/typehead/jquery.typeahead.min.css" rel="stylesheet" />
<script src="~/admin/assets/vendors/typehead/jquery.typeahead.min.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")
<script type="text/javascript">
    function fnBtnSavePartyAddress() {
        var ls = laddaStart('btnPartyAddressSave');
        PartyAddressModeldata = $("#formAddUpdatePartyAddress").serialize();
        $.ajax({
            type: 'POST',
            url: '/Marketing/Party/AddUpdatePartyAddress/',
            data: PartyAddressModeldata,
            dataType: 'json',
            success: function (data) {
                debugger;
                console.log(data.status);
                if (data.status) {
                    //notification
                    $("#canvas_PartyAddress").hide();//('hide');
                    Lobibox.notify('success', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: data.message,
                    });
                    $("#tblPartyAddress").load(window.location.href + " #tblPartyAddress");
                }
                else {
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: '@MessageHelper.Error'
                    });
                }
            },
            error: function (error) {
                laddaStop(ls);
                Lobibox.notify('error', {
                    pauseDelayOnHover: true,
                    size: 'mini',
                    icon: 'bx bx-check-circle',
                    continueDelayOnInactiveTab: false,
                    position: 'bottom right',
                    msg: '@MessageHelper.Error'
                });
            }
        }).always(function () {
            hideloader();
        });
    };

    var urlstate = '@Url.Action("GetState", "Base")';
    var urldistrict = '@Url.Action("GetDistrict", "Base")';
    var urltaluka = '@Url.Action("GetTaluka", "Base")';
    var urlcity = '@Url.Action("GetCity", "Base")';

    $(document).ready(function () {
        $("#CountryID").change(function () {
            $("#StateID").empty();
            $("#DistrictID").empty();
            $("#CityID").empty();
            $("#TalukaID").empty();
            $.ajax({
                type: 'POST',
                url: urlstate,
                dataType: 'json',
                data: { countryId: $("#CountryID").val() },
                success: function (response) {
                    $("#StateID").append('<option value>--Select--</option>');
                    $("#DistrictID").append('<option value>--Select--</option>');
                    $("#CityID").append('<option value>--Select--</option>');
                    $("#TalukaID").append('<option value>--Select--</option>');
                    if (response.status) {
                        console.log(response.data);
                        $.each(response.data, function (i, state) {
                            $("#StateID").append('<option value="'
                                + state.value + '">'
                                + state.text + '</option>');
                        });
                    }
                },
                error: function (ex) {
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            });
            return false;
        })

        $("#StateID").change(function () {
            $("#DistrictID").empty();
            $.ajax({
                type: 'POST',
                url: urldistrict,
                dataType: 'json',
                data: { stateId: $("#StateID").val() },
                success: function (response) {
                    $("#DistrictID").append('<option value>--Select--</option>');
                    if (response.status) {
                        console.log(response.data);
                        $.each(response.data, function (i, district) {
                            $("#DistrictID").append('<option value="'
                                + district.value + '">'
                                + district.text + '</option>');
                        });
                    }
                },
                error: function (ex) {
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            });

            $("#CityID").empty();
            $.ajax({
                type: 'POST',
                url: urlcity,
                dataType: 'json',
                data: { stateId: $("#StateID").val() },
                success: function (response) {
                    $("#CityID").append('<option value>--Select--</option>');
                    if (response.status) {
                        console.log(response.data);
                        $.each(response.data, function (i, city) {
                            $("#CityID").append('<option value="'
                                + city.value + '">'
                                + city.text + '</option>');
                        });
                    }
                },
                error: function (ex) {
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            });
            return false;
        })

        $("#DistrictID").change(function () {
            $("#TalukaID").empty();
            $.ajax({
                type: 'POST',
                url: urltaluka,
                dataType: 'json',
                data: { districtID: $("#DistrictID").val() },
                success: function (response) {
                    $("#TalukaID").append('<option value>--Select--</option>');
                    if (response.status) {
                        console.log(response.data);
                        $.each(response.data, function (i, taluka) {
                            $("#TalukaID").append('<option value="'
                                + taluka.value + '">'
                                + taluka.text + '</option>');
                        });
                    }
                },
                error: function (ex) {
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            });
            return false;
        })
    });
</script>

