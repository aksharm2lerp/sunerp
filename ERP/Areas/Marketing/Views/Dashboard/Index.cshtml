    </div>
    @*<div class="col-md-6 text-align-right">
    <a class="btn btn-primary px-5" asp-controller="Party" asp-action="AddUpdateParty" asp-area="Marketing">
    Add Party
    </a>
    </div>*@
</div>
<div class="container" id="partyListSummary">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
            <div class="card border-0 shadow rounded-3">
                <div class="card-body">


                    <div class="row">

                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                            <label class="col-form-label">Start Date</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate" value="@StartDate">
                            <span class="text-danger"></span>
                        </div>

                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                            <label class="col-form-label">End Date</label>
                            <input type="date" class="form-control" id="EndDate" name="EndDate" value="@EndDate">
                            <span class="text-danger"></span>
                        </div>

                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                            <label class="col-form-label">Employee Name</label>
                            <select class="form-select" id="SelectedEmployeeID" name="SelectedEmployeeID" asp-items="@CommonExtension.GetAllEmployeeAsyncForReferenceDropDown()">
                                <option value="" selected>Select Marketing Employee</option>
                            </select>
                        </div>

                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 text-center marketingDashboardPaddingTop">
                            <button id="btnSearchUserDetailForDashboard" type="button" onclick="fnSearchUserCount(true)" class="btn btn-outline-primary btn-sm">Search</button>
                        </div>
                    </div>

                    <hr />
                    <div>
                        @if (Model != null && Model.ListLoginHistoryModels.Count > 0)
                        {
                            @* await Html.PartialAsync("_dashboardBody", Model); *@
                            <!--Card box-->
                            <div class="row my-3">
                                <div class="col-sm-4 text-center">
                                    <div class="column">
                                        <div class="card bgColorDashboard">
                                            <div class="container my-3">
                                                <h2>Total Login</h2>
                                                <h4>@Model.TotalLogin</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <div class="column">
                                        <div class="card bgColorDashboard">
                                            <div class="container my-3">
                                                <h2>Total Visit's</h2>
                                                <h4>@Model.TotalVisits</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <div class="column">
                                        <div class="card bgColorDashboard">
                                            <div class="container my-3">
                                                <h2>Total Calls</h2>
                                                <h4>@Model.TotalCalls</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Card box-->
                            <!--Table-->
                            <div class="row my-3">
                                <div class="row" style="overflow:auto; width:100%;">
                                    <table class="table table-striped" style="white-space: nowrap; font-size:inherit !important;">

                                        <thead style="position: sticky; top: 0; background-color:#e9ecf8; color:black; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                            <tr>
                                                <th>Sr No.</th>
                                                <th>Name</th>
                                                <th>Login Date</th>
                                                <th>Time</th>
                                                <th>Browser</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int SrNo = 1;
                                        }
                                        <tbody>
                                            @foreach (var item in Model.ListLoginHistoryModels)
                                            {
                                                <tr>
                                                    <th>@SrNo</th>
                                                    <td>@item.UserName</td>
                                                    <td>@item.LoginDate</td>
                                                    <td>@item.LoginTime</td>
                                                    <td>@item.Browser</td>
                                                </tr>
                                                SrNo++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!--Table-->
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        var xValues = ["Rahul Mistry", "Dravesh Lokhande", "Sagar Parmar", "Sandip Patel", "Virat Gajjar"];
        var yValues = [55, 49, 44, 24, 15];
        var barColors = ["red", "green", "blue", "orange", "brown"];

        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Total login counts"
                }
            }
        });


        var date = new Date();
        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = year + "-" + month + "-" + day;

        document.getElementById("StartDate").value = today;
        document.getElementById("EndDate").value = today;

        function fnSearchUserCount() {

            let StartDate = $('#StartDate').val();
            let EndDate = $('#EndDate').val();
            let SelectedEmployeeID = $('#SelectedEmployeeID').val();
            if (StartDate == null || StartDate == "") {
                alert("Select start date...");
                return false;
            }
            if (EndDate == null || EndDate == "") {
                alert("Select end date...");
                return false;
            }
            //alert(`StartDate---- ${StartDate} && EndDate---- ${EndDate} && SelectedEmployeeID---- ${SelectedEmployeeID}`);
            let UserCountListUrl = '@Url.Action("Index", "Dashboard")';
            //alert('UserCountListUrl-- ' + UserCountListUrl);
            //let istrue = obj;
            let viewUserLoginList;
            if (SelectedEmployeeID == null || SelectedEmployeeID == "") {
                viewUserLoginList = UserCountListUrl + '?startDate=' + StartDate + '&endDate=' + EndDate;
            }
            else {
                viewUserLoginList = UserCountListUrl + '?startDate=' + StartDate + '&endDate=' + EndDate + '&employee=' + SelectedEmployeeID;
            }
            window.location.href = viewUserLoginList;
        };

    </script>
