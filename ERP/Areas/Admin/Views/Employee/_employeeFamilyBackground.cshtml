<script type="text/javascript">
    function fnSubmitEmployeeFamilyDetail() {
        // alert($("#formEmployeeFamilyBackground").valid());
        if ($("#EmergencyMobileNumber").valid()) {
            var ls = laddaStart('btnSaveFamily');
            modelFamilydata = $("#formEmployeeFamilyBackground").serialize();
            $.ajax({
                type: 'POST',
                url: '/Admin/Employee/AddUpdateEmployeeFamilyBackground/',
                data: modelFamilydata,
                dataType: 'json',
                success: function (data) {
                    if (data.status) {
                        //notification
                        Lobibox.notify('success', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: 'Family Background Updated successfully.',
                        });
                        setTimeout(
                            function () {
                                //window.location.reload();
                                $("#formEmployeeFamilyBackground").load(window.location.href + " #formEmployeeFamilyBackground");
                            }, 2000);
                    }
                    else {
                        Lobibox.notify('error', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: '@MessageHelper.Error'
                        });
                    }
                },
                error: function (error) {
                    laddaStop(ls);
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: '@MessageHelper.Error'
                    });
                }
            }).always(function () {
                hideloader();
            });
        }
    };
</script>