                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: data.message,
                    });
                    document.getElementById("btnSaveEmployeeHRAdministration").removeAttribute("disabled");
                    $("#canvasSalaryPaidHr").hide();
