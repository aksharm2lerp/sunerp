        <div class="row mb-3">
            <label for="" class="col-sm-3 col-form-label ">SSI No:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="SSINo" id="SSINo" name="SSINo" placeholder="">
            </div>
        </div>

        <div class="row mb-3">
            <label for="" class="col-sm-3 col-form-label ">TAN No:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="TANNo" id="TANNo" name="TANNo" placeholder="">
            </div>
        </div>

        <div class="row mb-3">
            <label for="" class="col-sm-3 col-form-label ">Export No:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="ExportNo" id="ExportNo" name="ExportNo" placeholder="">
