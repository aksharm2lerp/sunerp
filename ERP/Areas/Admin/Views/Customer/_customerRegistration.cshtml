    <input type="hidden" asp-for="CustomerRegistrationID" />

    <div class=" col-sm-12 col-md-6 col-lg-6">

        <div class="row mb-3">
            @*<label for="" class="col-sm-3 col-form-label ">Office phone no.:<span class="required">*</span></label>*@
